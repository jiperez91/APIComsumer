<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9b8c8c"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="URL:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:editable="true"
        android:hint="Enter URL"
        android:textSize="15dp"
        android:text="http://192.168.1.112:8080/cars/api"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.jiperez.apiconsumer.MainActivity"
        android:background="#9b8c8c">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="GET"
            android:id="@+id/buttonget"
            android:onClick="getexe"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttondelete"
            android:layout_alignEnd="@+id/buttondelete" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="POST"
            android:id="@+id/buttonpost"
            android:layout_alignTop="@+id/buttonget"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="postexe" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/buttondelete"
            android:onClick="deleteexe"
            android:layout_below="@+id/buttonget"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="PUT"
            android:id="@+id/buttonput"
            android:layout_alignTop="@+id/buttondelete"
            android:layout_alignLeft="@+id/buttonpost"
            android:layout_alignStart="@+id/buttonpost"
            android:onClick="putexe" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/lele"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonpost"
        android:layout_alignEnd="@+id/buttonpost"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp" />

</LinearLayout>